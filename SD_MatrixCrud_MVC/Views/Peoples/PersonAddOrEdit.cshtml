@model SD_MatrixCrud_MVC.Models.Person

@{
    ViewData["Title"] = "Cadastro Pessoas";
}

<h1>Cadastro</h1>

<hr />
<div class="container p-3">
    <div class="row">
        <div class="col">
            <form asp-action="PersonAddOrEdit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />

                <div class="form-row row mb-3">
                    <div class="form-group col-sm-6">
                        <label asp-for="FullName" class="form-label"></label>
                        <input type="text" asp-for="FullName" class="form-control" placeholder="Nome Completo" />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>
                    <div class="form-group col-sm-2">
                        <label asp-for="DateOfBirth" class="form-label"></label>
                        <input type="date" asp-for="DateOfBirth" class="form-control" />
                        <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-row row mb-3">
                    <div class="form-group col-sm-6">
                        <label asp-for="Adress" class="form-label"></label>
                        <input asp-for="Adress" class="form-control" placeholder="Endereço e Número" />
                        <span asp-validation-for="Adress" class="text-danger"></span>
                    </div>
                    <div class="form-group col-sm-6">
                        <label asp-for="Adress2" class="form-label"></label>
                        <input asp-for="Adress2" class="form-control" placeholder="Bairro e/ou Condomínio" />
                        <span asp-validation-for="Adress2" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-row row mb-3">
                    <div class="form-group col-sm-5">
                        <label asp-for="Complement" class="form-label"></label>
                        <input asp-for="Complement" class="form-control" placeholder="Complemento Apto, casa...." />
                        <span asp-validation-for="Complement" class="text-danger"></span>
                    </div>
                    <div class="form-group col-sm-5">
                        <label asp-for="City" class="form-label"></label>
                        <input asp-for="City" class="form-control" placeholder="Cidade" />
                        <span asp-validation-for="City" class="text-danger"></span>
                    </div>
                    <div class="form-group col-sm-2">
                        <label asp-for="State" class="form-label"></label>
                        <input asp-for="State" class="form-control" placeholder="Estado" />
                        <span asp-validation-for="State" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group p-2">
                    <div class="row">
                        <div class="form-group col-sm-4 col-md-4 col-lg-4">
                            <input type="submit" value="Salvar" class="btn btn-primary btn-block" />
                        </div>
                        <div class="form-group col-sm-4 col-md-4 col-lg-4">
                            <a asp-action="Index" class="btn btn-secondary btn-block">
                                <i class="fa fa-table"></i>Voltar
                            </a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<hr />

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}